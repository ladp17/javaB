package br.com.elaborata.ex1;

/**
 * @author Leo
 *
 */

public class Bool {
	
	private Boolean bool;
	
	public void imprimeVdd(Bool bool){
		
		System.out.println(this.bool + " and " + bool + " = " + (this.getBool() && bool.getBool()));
		System.out.println(this.bool + " or " + bool + " = " + (this.bool.getBool() || bool.getBool()));
		System.out.println(this.bool + " xor " + bool + " = " + (this.bool.getBool() ^ bool.getBool()));
		
	} 

	public Boolean getBool() {
		return bool;
	}

	public void setBool(Bool boolean1) {
		this.bool = boolean1;
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		Teclado teclado = new Teclado();
		
		Bool boolean1 = new Bool();
		Bool boolean2 = new Bool();
		
		System.out.println("digite 1-v ou 2-f");
		
		if (teclado.leInteger().equals(1)) {
			
			boolean1.setBool(true);
			
		} else {
			
			boolean1.setBool(false);

		}
		
		System.out.println("digite 1-v ou 2-f");
		
if (teclado.leInteger().equals(1)) {
			
			boolean2 = new Bool(true);
			
		} else {
			
			boolean2 = new Bool(false);

		}

		boolean1.imprimeVdd(boolean2);		

	}

}
