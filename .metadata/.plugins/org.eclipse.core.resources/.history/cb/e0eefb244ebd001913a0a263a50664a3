package br.com.elaborata.lista3.ex2;

import java.util.ArrayList;

/**
 * @author Leo
 *
 */

public class Menu {
	private Teclado teclado = new Teclado();
	private ArrayList<Item> menu = new ArrayList<Item>();
			
	
	public void criaMenu(){
		
		{
			Item item = new Item();
			item.setNome("X-Salada");
			item.setPreco(5.30);
			this.menu.add(item);
		}

		{
			Item item = new Item();
			item.setNome("X-Bacon");
			item.setPreco(6.00);
			this.menu.add(item);
		}

		
	}
	
	public void imprimeMenu() {
		Integer i;
		Integer escolha;
		
		do {
			
			
			for (Item item : menu) {
				
				System.out.print(menu.indexOf(item) + " - ");
				teclado.imprime(item);
			}
			
			System.out.println(menu.indexOf(item) + " - " + "Finalizar pedido");
			
			escolha = teclado.leInteger();
					
			if (escolha !=menu.indexOf(item)) {
				
				menu.get(menu.indexOf(item)).sell();
				
			}
			
		} while (escolha != menu.indexOf(item));
		
		System.out.println("concluido");
		
	}
		
	
	
}
