 * 
 */
package br.com.elaborata;

/**
 * @author Leo
 *
 */
public class Carga extends Veiculo {

	private Double capacidade;
	
	public Carga(Double capacidade) {
		
		this.capacidade = capacidade;
		
	}

	public Double getCapacidade() {
		return capacidade;
	}
	
	public Double calculaValorLocacao(){
		final Double taxaFixa = 333.00;
		final Double taxaKm = 4.25;
		final Double taxaAC = 235.00; 
		Double somaSemAc;
		
		somaSemAc = taxaFixa + taxaKm * super.getKmRodado();
		
		return (this.arCondicionado)? somaSemAc + taxaAC : somaSemAc;
		
	}

}
