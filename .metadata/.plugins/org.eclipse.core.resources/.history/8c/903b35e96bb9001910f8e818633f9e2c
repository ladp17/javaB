/**
 * 
 */
package br.com.elaborata.relampago;

/**
 * @author Leo
 *
 */
public class Som {

	/**
	 * @param args
	 */
	
	private final Float velocidadeDoSom = 5.0F;
	private Float tempoPropagacao;
	
	private void imprime(String msg){
		
		System.out.println(msg);
		
	}
	
	public String calculaDistancia(){
		Float distancia;
		
		distancia = this.tempoPropagacao * this.velocidadeDoSom;
		
		imprime(distancia.toString());
		return distancia.toString();
	}
	
	public static void main(String[] args) {
		Som som = new Som();
		Teclado teclado = new Teclado();
		
		som.tempoPropagacao = teclado.leFloat();
		
	}
	

}
